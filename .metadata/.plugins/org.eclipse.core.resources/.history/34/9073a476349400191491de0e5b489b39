package persistence;

import java.util.List;

import javax.enterprise.inject.Disposes;
import javax.inject.Inject;
import javax.persistence.EntityManager;

import model.Saudacao;

public class SaudacaoRepository implements Repository {

	@Inject
	private SaudacaoEntityManager entityManager;

	public void finaliza(@Disposes EntityManager manager) {
		manager.close();
	}

	public Saudacao findById(Long id) {
		return entityManager.find(Saudacao.class, id);
	}

	@SuppressWarnings("unchecked")
	public List<Saudacao> findAll() {
		return entityManager.createQuery("FROM Saudacao ORDER BY id").getResultList();
	}

	public void persist(Saudacao saudacao) {
		try {
			entityManager.getTransaction().begin();
			entityManager.persist(saudacao);
			entityManager.getTransaction().commit();
		} catch (Exception ex) {
			ex.printStackTrace();
			entityManager.getTransaction().rollback();
		}
	}

	public void merge(Saudacao saudacao) {
		try {
			entityManager.getTransaction().begin();
			entityManager.merge(saudacao);
			entityManager.getTransaction().commit();
		} catch (Exception ex) {
			ex.printStackTrace();
			entityManager.getTransaction().rollback();
		}
	}

	public void remove(Long id) {
		try {
			Saudacao saudacao = entityManager.find(Saudacao.class, id);
			entityManager.getTransaction().begin();
			entityManager.remove(saudacao);
			entityManager.getTransaction().commit();
		} catch (Exception ex) {
			ex.printStackTrace();
		}
	}

}
