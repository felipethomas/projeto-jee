package persistence;

import java.util.List;

import javax.enterprise.context.RequestScoped;
import javax.enterprise.inject.Disposes;
import javax.enterprise.inject.Produces;
import javax.inject.Inject;
import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import model.Saudacao;

public class SaudacaoRepository implements Repository {

	@Inject
	private EntityManager entityManager;

	private EntityManager getEntityManager() {
		return entityManager;
	}

	public void finaliza(@Disposes EntityManager manager) {
		manager.close();
	}

	public Saudacao findById(Long id) {
		return getEntityManager().find(Saudacao.class, id);
	}

	@SuppressWarnings("unchecked")
	public List<Saudacao> findAll() {
		return getEntityManager().createQuery("FROM Saudacao ORDER BY id").getResultList();
	}

	public void persist(Saudacao saudacao) {
		try {
			getEntityManager().getTransaction().begin();
			getEntityManager().persist(saudacao);
			getEntityManager().getTransaction().commit();
		} catch (Exception ex) {
			ex.printStackTrace();
			getEntityManager().getTransaction().rollback();
		}
	}

	public void merge(Saudacao saudacao) {
		try {
			getEntityManager().getTransaction().begin();
			getEntityManager().merge(saudacao);
			getEntityManager().getTransaction().commit();
		} catch (Exception ex) {
			ex.printStackTrace();
			getEntityManager().getTransaction().rollback();
		}
	}

	public void remove(Long id) {
		try {
			Saudacao saudacao = getEntityManager().find(Saudacao.class, id);
			getEntityManager().getTransaction().begin();
			getEntityManager().remove(saudacao);
			getEntityManager().getTransaction().commit();
		} catch (Exception ex) {
			ex.printStackTrace();
		}
	}

}
