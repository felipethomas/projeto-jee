package persistence;

import javax.enterprise.context.RequestScoped;
import javax.enterprise.inject.Disposes;
import javax.enterprise.inject.Produces;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

public class SaudacaoEntityManager {
	private static EntityManagerFactory factory = Persistence.createEntityManagerFactory("treinamentojee");

	@Produces
	@RequestScoped
	public SaudacaoEntityManager criaEntityManager() {
		return factory.createEntityManager();
	}

	public void finaliza(@Disposes SaudacaoEntityManager manager) {
		manager.close();
	}

}
