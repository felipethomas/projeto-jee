package rest;

import java.util.HashMap;
import java.util.Map;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;

import persistence.Repository;
import persistence.SaudacaoRepository;

@Path("/saudacoes")
public class SaudacaoResource {

	private Repository saudacaoRepository;

	@GET
	@Path("{id}")
	@Produces(MediaType.APPLICATION_JSON)
	public Response getSaudacaoById(@PathParam("id") String id) {
		Map<String, String> response = new HashMap<String, String>();
		
		saudacaoRepository = new SaudacaoRepository();
		response.put("id:", saudacaoRepository.findById(1L).getId().toString());

		return Response.ok(response).build();
	}
}
