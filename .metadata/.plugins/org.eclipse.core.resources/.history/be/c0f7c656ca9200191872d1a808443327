package persistence;

import java.util.Collections;
import java.util.List;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import model.Saudacao;

public class SaudacaoRepository implements Repository {

	private EntityManager entityManager;

	private EntityManager getEntityManager() {
		EntityManagerFactory factory = Persistence.createEntityManagerFactory("treinamentojee");

		if (entityManager == null) {
			entityManager = factory.createEntityManager();
		}

		return entityManager;
	}

	public Saudacao findById(Long id) {
		return getEntityManager().find(Saudacao.class, id);
	}

//	@SuppressWarnings("unchecked")
	public List<Saudacao> findAll() {
		List list = entityManager.createQuery("FROM Saudacao").getResultList();
		return Collections.checkedList(list, Saudacao.class);
	}
	
    public void persist(Saudacao saudacao) {
        try {
           entityManager.getTransaction().begin();
           entityManager.persist(saudacao);
           entityManager.getTransaction().commit();
        } catch (Exception ex) {
           ex.printStackTrace();
           entityManager.getTransaction().rollback();
        }
      }

      public void merge(Saudacao saudacao) {
        try {
           entityManager.getTransaction().begin();
           entityManager.merge(saudacao);
           entityManager.getTransaction().commit();
        } catch (Exception ex) {
           ex.printStackTrace();
           entityManager.getTransaction().rollback();
        }
      }

      public void remove(Long id) {
        try {
           Saudacao saudacao = entityManager.find(Saudacao.class, id);
           entityManager.getTransaction().begin();
           entityManager.remove(saudacao);
           entityManager.getTransaction().commit();
        } catch (Exception ex) {
           ex.printStackTrace();
        }
      }

}
